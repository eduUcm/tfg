            <button id="botonListar" class="btn btn-outline-secondary sp1" type="button">Listar Usuarios</button>
            <hr />   
            <div id="separador"></div>
            <span id="mensaje"></span>
                <div class="table-responsive contenidoVentana">
                    <table id="tablaUsuarios" class="table table-hover">
                        <thead>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                    <ul id="pag" class="pagination">
                    </ul>
                </div>
        </div>

        <!-- MODAL INFO USUARIO -->
        <div id="modalInfoUsuario" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-lg">
            <div id="modalContent" class="modal-content">
                <div class="modal-header">
                    <div id="contenidoHeader">
                    </div>
                </div>
                <div class="modal-body">
                    <div class="col-12">
                        <h4>Visitas asociadas:</h4>
                    </div>
                    <div id="contenidoVisitas">
                    </div>
                </div>
                <div class="modal-footer">
                </div>
            </div>
          </div>
        </div>

    </div>
  </body>

  <%- include('footer') %>

</html>
